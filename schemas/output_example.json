{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/AnVenDev/ai-oracle-rwa/main/schemas/output_example.json",
  "title": "AI Oracle Inference Output (Draft)",
  "type": "object",
  "required": [
    "asset_id",
    "asset_type",
    "timestamp",
    "metrics",
    "flags",
    "model_meta"
  ],
  "properties": {
    "asset_id": { "type": "string" },
    "asset_type": {
      "type": "string",
      "examples": ["property", "art", "greenhouse"]
    },
    "timestamp": { "type": "string", "format": "date-time" },
    "metrics": {
      "type": "object",
      "required": ["valuation_base_k"],
      "properties": {
        "valuation_base_k": { "type": "number" },
        "condition_score": { "type": "number", "minimum": 0, "maximum": 1 },
        "risk_score": { "type": "number", "minimum": 0, "maximum": 1 },
        "authenticity_prob": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "additionalProperties": true
    },
    "flags": {
      "type": "object",
      "required": ["anomaly", "needs_review"],
      "properties": {
        "anomaly": { "type": "boolean" },
        "needs_review": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "model_meta": {
      "type": "object",
      "properties": {
        "value_model_version": { "type": "string" },
        "value_model_name": { "type": "string" },
        "anomaly_model_version": { "type": "string" },
        "auth_model_version": { "type": "string" }
      },
      "additionalProperties": true
    },
    "offchain_refs": {
      "type": "object",
      "properties": {
        "detail_report_hash": { "type": ["string", "null"] },
        "sensor_batch_hash": { "type": ["string", "null"] }
      },
      "additionalProperties": true
    },
    "latency_ms": { "type": "number" },
    "publish": {
      "type": "object",
      "properties": {
        "status": { "type": "string" },
        "txid": { "type": "string" }
      },
      "required": ["status", "txid"],
      "additionalProperties": false
    },
    "schema_validation_error": { "type": "string" }
  },
  "additionalProperties": false
}
