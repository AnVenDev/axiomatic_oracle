{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AI Oracle Output Schema",
  "type": "object",
  "required": [
    "asset_id",
    "asset_type",
    "timestamp",
    "metrics",
    "flags",
    "model_meta"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "asset_id": {
      "type": "string"
    },
    "asset_type": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "metrics": {
      "type": "object",
      "properties": {
        "valuation_base_k": {
          "type": "number"
        },
        "uncertainty": {
          "type": "number"
        },
        "confidence_low_k": {
          "type": "number"
        },
        "confidence_high_k": {
          "type": "number"
        },
        "latency_ms": {
          "type": "number"
        },
        "condition_score": {
          "type": "number"
        },
        "risk_score": {
          "type": "number"
        }
      },
      "additionalProperties": true
    },
    "flags": {
      "type": "object",
      "properties": {
        "anomaly": {
          "type": "boolean"
        },
        "drift_detected": {
          "type": "boolean"
        },
        "needs_review": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "model_meta": {
      "type": "object",
      "properties": {
        "value_model_version": {
          "type": "string"
        },
        "value_model_name": {
          "type": "string"
        }
      },
      "required": ["value_model_version", "value_model_name"],
      "additionalProperties": true
    },
    "offchain_refs": {
      "type": "object",
      "properties": {
        "detail_report_hash": {
          "type": ["string", "null"]
        },
        "sensor_batch_hash": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false
    },
    "_logged_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
