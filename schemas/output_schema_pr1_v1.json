{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "output_pr1_v1",
  "title": "PoProof Print Output v1",
  "type": "object",
  "required": ["schema_version", "timestamp", "attestation", "publish"],
  "properties": {
    "schema_version": { "type": "string", "const": "pr1-v1" },
    "timestamp":      { "type": "string", "format": "date-time", "pattern": "Z$" },
    "trace_id":       { "type": ["string","null"] },

    "attestation": {
      "type": "object",
      "required": ["pr1", "pr1_sha256", "pr1_size_bytes", "input_hash"],
      "properties": {
        "pr1":            { "$ref": "poproof_v1_compact.schema.json" },
        "pr1_sha256":     { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "pr1_size_bytes": { "type": "integer", "minimum": 1 },
        "canonical_input":{ "type": ["object","null"] },
        "input_hash":     { "type": "string", "pattern": "^[a-f0-9]{64}$" }
      },
      "additionalProperties": true
    },

    "publish": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": { "type": "string", "enum": ["ok", "error", "skipped"] },
        "error":  { "type": ["string","null"] },
        "network":{ "type": ["string","null"], "enum": ["algorand-mainnet","algorand-testnet","algorand-betanet","algorand-sandbox", null] },
        "txid":   { "type": ["string","null"] },
        "note_size":  { "type": ["integer","null"], "minimum": 0 },
        "note_sha256":{ "type": ["string","null"], "pattern": "^[a-f0-9]{64}$" }
      },
      "additionalProperties": true
    },

    "cache_hit": { "type": ["boolean","null"] },
    "validation": {
      "type": "object",
      "properties": {
        "ok":       { "type": ["boolean","null"] },
        "warnings": { "type": ["array","null"] },
        "errors":   { "type": ["array","null"] }
      },
      "additionalProperties": true
    },

    "_logged_at": { "type": "string", "format": "date-time", "pattern": "Z$" }
  },
  "additionalProperties": false
}
