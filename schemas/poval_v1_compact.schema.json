{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "poval_v1_compact",
  "title": "PoVal v1 â€” Compact Attestation (p1)",
  "type": "object",
  "required": ["s", "a", "mv", "mh", "ih", "v", "u", "ts"],
  "properties": {
    "s": { "type": "string", "const": "p1" },
    "a": { "type": "string", "enum": ["re:EUR"] },
    "mv": { "type": "string", "minLength": 1, "maxLength": 16 },
    "mh": { "type": "string", "pattern": "^([a-f0-9]{64})?$" },
    "ih": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "v": { "type": "number", "minimum": 0 },
    "u": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": { "type": "number", "minimum": 0 },
      "description": "Business rule: u[0] <= v <= u[1] (verificata dal Verifier)."
    },
    "ts": { "type": "integer", "minimum": 0 }
  },
  "additionalProperties": false
}
