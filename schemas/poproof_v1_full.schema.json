{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "poproof_v1_full",
  "title": "PoProof v1 â€” Full Receipt",
  "type": "object",
  "required": ["compact", "evidence"],
  "properties": {
    "compact": { "$ref": "poproof_v1_compact.schema.json" },
    "evidence": {
      "type": "object",
      "required": ["input_sha256", "created_utc"],
      "properties": {
        "input_sha256":   { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "created_utc":    { "type": "string", "format": "date-time", "pattern": "Z$" },
        "source": {
          "type": "object",
          "properties": {
            "device_id":     { "type": ["string","null"] },
            "operator_id":   { "type": ["string","null"] },
            "provider_id":   { "type": ["string","null"] },
            "measurement":   { "type": ["string","null"], "description": "es. smart_meter_v1 | manual_entry | api_webhook" }
          },
          "additionalProperties": false
        },
        "signature":      { "type": ["string","null"], "description": "future: firma del provider/operator" },
        "manifest_sha256":{ "type": ["string","null"], "pattern": "^[a-f0-9]{64}$" },
        "notes":          { "type": ["string","null"] }
      },
      "additionalProperties": false,
      "patternProperties": { "^x-": {} }
    }
  },
  "additionalProperties": false
}
