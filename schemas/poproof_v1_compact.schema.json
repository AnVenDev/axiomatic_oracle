{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "poproof_v1_compact",
  "title": "PoProof v1 â€” Compact Receipt (pr1)",
  "type": "object",
  "required": ["s", "k", "ih", "v", "ts"],
  "properties": {
    "s": { "type": "string", "const": "pr1" },
    "k": { "type": "string", "minLength": 1, "maxLength": 64, "pattern": "^[a-z0-9:_-]+$" },
    "a": { "type": "string", "minLength": 2, "maxLength": 16, "pattern": "^[a-z0-9:_-]+$" },
    "ih": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "v":  { "type": "number" },
    "u":  {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": { "type": "number" },
      "description": "Business rule: if present, u[0] <= v <= u[1] (verificata dal Verifier)."
    },
    "ts": { "type": "integer", "minimum": 0 }
  },
  "additionalProperties": false
}
