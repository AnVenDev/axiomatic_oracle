{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "poval_v1_full",
  "title": "PoVal v1 â€” Full Attestation",
  "type": "object",
  "required": ["compact", "evidence"],
  "properties": {
    "compact": { "$ref": "poval_v1_compact.schema.json" },
    "evidence": {
      "type": "object",
      "required": ["model_hash", "model_version", "input_sha256", "created_utc"],
      "properties": {
        "model_hash": { "type": ["string", "null"], "pattern": "^[a-f0-9]{64}$" },
        "model_version": { "type": "string", "minLength": 1, "maxLength": 32, "pattern": "^[a-z0-9._-]+$" },
        "input_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "created_utc": { "type": "string", "format": "date-time", "pattern": "Z$" },
        "manifest_sha256": { "type": ["string", "null"], "pattern": "^[a-f0-9]{64}$" },
        "feature_order": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false,
      "patternProperties": {
        "^x-": {}
      }
    }
  },
  "additionalProperties": false
}
